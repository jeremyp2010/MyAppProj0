<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.j.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/txtTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#595d66" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/btnSpotify"
        android:layout_below="@+id/txtTitle"
        android:layout_marginTop="10dp"
        android:backgroundTint="#f08c35"
        android:shadowColor="#848380"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/btnCapstone"
        android:layout_alignEnd="@+id/btnCapstone"
        android:layout_alignLeft="@+id/btnCapstone"
        android:layout_alignStart="@+id/btnCapstone"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/btnScores"
        android:layout_below="@+id/btnSpotify"
        android:backgroundTint="#f08c35"
        android:shadowColor="#848380"
        android:textColor="#ffffff"
        android:layout_alignRight="@+id/btnCapstone"
        android:layout_alignEnd="@+id/btnCapstone"
        android:layout_alignLeft="@+id/btnCapstone"
        android:layout_alignStart="@+id/btnCapstone"
        android:onClick="onClick"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/btnLibrary"
        android:backgroundTint="#f08c35"
        android:shadowColor="#848380"
        android:textColor="#ffffff"
        android:onClick="onClick"
        android:layout_below="@+id/btnScores"
        android:layout_alignLeft="@+id/btnScores"
        android:layout_alignStart="@+id/btnScores"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/btnScores"
        android:layout_alignEnd="@+id/btnScores" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btnBuildIt"
        android:backgroundTint="#f08c35"
        android:shadowColor="#848380"
        android:textColor="#ffffff"
        android:onClick="onClick"
        android:layout_below="@+id/btnLibrary"
        android:layout_alignLeft="@+id/btnLibrary"
        android:layout_alignStart="@+id/btnLibrary"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/btnLibrary"
        android:layout_alignEnd="@+id/btnLibrary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACONREADER"
        android:id="@+id/btnBacon"
        android:backgroundTint="#f08c35"
        android:shadowColor="#848380"
        android:textColor="#ffffff"
        android:onClick="onClick"
        android:layout_below="@+id/btnBuildIt"
        android:layout_alignRight="@+id/btnBuildIt"
        android:layout_alignEnd="@+id/btnBuildIt"
        android:layout_alignLeft="@+id/btnBuildIt"
        android:layout_alignStart="@+id/btnBuildIt"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/btnCapstone"
        android:backgroundTint="#e63553"
        android:shadowColor="#848380"
        android:textColor="#ffffff"
        android:onClick="onClick"
        android:layout_below="@+id/btnBacon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
